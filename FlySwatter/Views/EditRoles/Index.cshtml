@using FlySwatter.Models
@model Dictionary<string, UserViewModel> 

@{
}

<div class="row" id="manageroles">
    <div class="col-sm-12">
        @using (Html.BeginForm("Update", "EditRoles", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            User
                        </th>
                        @{ var roles = new string[] { "Submitter", "Developer", "ProjectManager", "Admin" }; }
                        @foreach (var role in roles)
                        {
                            <th>
                                @role
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <th>
                                @{ var userName = user.Key.Split('@')[0].Trim(); } 
                                @userName
                            </th>
                            @foreach (var role in roles)
                            {
                                <td>
                                    @Html.CheckBoxFor(m => m[user.Key].Roles[role])
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            <input class="btn btn-danger" type="submit" value="Make Changes" />
        }
    </div>
</div>