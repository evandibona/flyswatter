@using FlySwatter.Models
@model IList<FlySwatter.Models.ApplicationUser>

@{
}

<div class="row" id="manageroles">
    <div class="col-sm-12">
        @using (Html.BeginForm("Update", "EditRoles", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            User
                        </th>
                        @{ var roles = new string[] { "Submitter", "Developer", "ProjectManager", "Admin" }; }
                        @foreach (var role in roles)
                        {
                            <th>
                                @role
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            @{var user = Model[i];}
                            <th>
                                @{ var userName = user.Email.Split('@')[0].Trim(); } 
                                @userName
                            </th>
                            @foreach (var role in roles)
                            {
                                <td>
                                    @Html.CheckBoxFor(m => m[i]) 
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            <input class="btn btn-danger" type="submit" value="Make Changes" />
        }
    </div>
</div>