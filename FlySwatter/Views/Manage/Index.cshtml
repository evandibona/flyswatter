@model FlySwatter.Models.IndexViewModel
@{
    ViewBag.Title = "Your Account";
}

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row text-center">
    <div class="col-sm-12">
        <h2>Account Settings</h2>
    </div>
</div>
<div class="row text-center">
    <div class="col-sm-12">
        <hr />
        <div class="btn-group">
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "btn btn-sm btn-success" })
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword", null, new { @class = "btn btn-danger btn-sm" })
            }
            @Html.ActionLink(Model.Email, "SendEmail", new { email = Model.Email }, new { @class = "btn btn-info btn-sm" })
        </div>
    </div>
</div>
<div class="row text-center">
    <div class="col-sm-12">
        <h2>Profile</h2>
    </div>
</div>
<div class="row text-center">
    <div class="col-sm-12">
        <hr />
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h4>First Name</h4>
                @Html.TextBox("FirstName", Model.FirstName)
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>
